              +form-horizontal-item({label:'所属部门',type:'select',cw:7})(class="col-md-4")
              +form-horizontal-item({label:'供应商',type:'select',cw:7})(class="col-md-4")
              +form-horizontal-item({label:'审批状态',type:'checkbox',cw:7,text:['全部','已生效','审批中','未生效']})(class="col-md-4")
      p.slider-btn.text-right 
        a.open-close-btn(href="javascript:;") ▼展开       
    .con-container
     .pact-form.list-container
        table#query-list