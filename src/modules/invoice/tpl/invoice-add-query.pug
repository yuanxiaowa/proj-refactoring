append style
  +style('invoice')

append content
  .container-fluid
    .con-container
      .tab-nav.text-right
        button.btn.btn-primary.J-add-save 查询
        a(href="invoice-approve.html").btn.btn-default 发票录入申请
        button.btn.btn-default 删除
      .pact-form.clearfix
        .row.col-md-12.slider-container 
          +form-horizontal()(class="row" id="add-contact-form")
            .row
              +form-horizontal-item({label:'申请编号',type:'select',cw:7})(class="col-md-4")
