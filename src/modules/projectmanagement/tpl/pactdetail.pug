              +detail-list(items)
      +tab(tabs)
        .tab-pane.active#tab1
          .panel.panel-default
            .panel-body.row
              .col-md-12
                +table-pact-pay
        .tab-pane#tab2
          .panel.panel-default
            .panel-body.row
              .col-md-12
                +table-pact-desc
        .tab-pane#tab3
          .panel.panel-default
            .panel-body.row
              .col-md-12
                +table-pact-file
        .tab-pane#tab4
          .panel.panel-default
            .panel-body.row
              .col-md-12
                +table-pact-change-history
      .modal.fade#pactModal(tabindex="-1" role="dialog" aria-labelledby="pactModal")
        .modal-dialog( role="document")
          .modal-content
            .modal-header
              h4.modal-title#myModalLabel 合同评审表
