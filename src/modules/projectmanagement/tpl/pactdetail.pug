append style
  +style('pactdetail')


append content
  .container-fluid
    .con-container
      .tab-nav
        a.btn.btn-primary(href="") 编辑
        button.btn.btn-default 确认提交 
        button.btn.btn-default 审批意见
        button.btn.btn-default(data-toggle="modal" data-target="#pactModal") 合同评审表 
      .panel.panel-default.mt-20.detail-show
        .panel-heading: .row
        .panel-body.pact-info
          .row
            .statu-pic.col-md-offset-10
              img(src="image/statu.png")
              img(src="image/success-statu.png")
              img(src="image/wait-statu.png")
              img(src="image/nopass-statu.png")
            .col-md-12
              p.project-name 南京歌剧院建设工程施工合同
