extends /common

append style
  +style('project-config')

append content
  .container-fluid
    .con-container
      .tab-nav
         button.btn.btn-primary.J-add-save 保存
      .wrap-container
        form.form-horizontal(class="row" id="add-pro-detail-form" action="" method="post")
          +template
            .form-group
              label.col-md-2.control-label 项目编号生成：
              .col-sm-10.project-num-create 自动 
                label.sta
                  |{{#autoCreateProjectNo}}
                  input(type="checkbox" checked class="isAutoProject" name="autoCreateProjectNo" value="1") 
                  |是
                  |{{/autoCreateProjectNo}}
                  |{{^autoCreateProjectNo}}
                  input(type="checkbox"  class="isAutoProject" name="autoCreateProjectNo" value="0") 
                  |是
                  |{{/autoCreateProjectNo}}
            .form-group|{{^projectNoCreationRules}}.hidden|{{/projectNoCreationRules}}
              label.col-md-2.control-label 规则：
              .col-sm-10
                .number-wrap-container.clearfix
                  .fixation.clearfix.auto_box
                    |{{#projectNoCreationRules}}
                    div.project-item.pull-left
                      input.rules_auto(type="hidden" value="{{.}}" name="projectNoCreationRules") 
                      |{{.}}
                      em.del-item x
                    |{{/projectNoCreationRules}}
                    span.increase-num.pull-left 递增编号
                    span.add-ico
                    input.form-control(type="text" value="2") 
                    span.add-ico 位
                    span.circle-add.J-add-auto_no +
            .form-group
              label.col-md-2.control-label 项目状态：
              .col-sm-10.list-box
                |{{#projectStatuses}}
                div.project-item 
                  input(type="hidden" name="projectStatuses" value="{{.}}")
                  | {{.}}
                  em.del-item ×
                |{{/projectStatuses}}
                span.circle-add.J-add-item +
            .form-group
              label.col-md-2.control-label 工程类别：
              .col-sm-10.list-box
                |{{#projectTypes}}
                div.project-item  
                  input(type="hidden" name="projectTypes" value="{{.}}")
                  |{{.}}
                  em.del-item ×
                |{{/projectTypes}}
                span.circle-add.J-add-item +
            .form-group
              label.col-md-2.control-label 联系单位类型：
