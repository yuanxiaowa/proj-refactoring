extends /common

append style
  +style('pay')

append content
  .container-fluid
    .con-container
      .tab-nav.text-right
        button.btn.btn-primary 查询
        a(href="pay-apply.html").btn.btn-default 付款申请  
        button.btn.btn-default 删除
      .pact-form.clearfix
        .row.col-md-12.slider-container
          +form-horizontal()(class="row" id="purchase-plan")
            .row
              +form-horizontal-item({label:'付款单编号',type:'text',cw:7})(class="col-md-4")
              +form-horizontal-item({label:'所属项目',type:'select',cw:7})(class="col-md-4")
            .row
              +form-horizontal-item({label:'材料合同',type:'select',cw:7})(class="col-md-4")
              +form-horizontal-item({label:'供应商',type:'date',cw:7})(class="col-md-4")
            .row
              +form-horizontal-item({label:'所属部门',type:'select',cw:7})(class="col-md-4")
              +form-horizontal-item({label:'审批状态',type:'checkbox',cw:8,text:['全部','已生效','审批中','未生效','审批终止']})(class="col-md-8 statu")
      p.slider-btn.text-right 
        a.open-close-btn(href="javascript:;") ▼展开
    .con-container
      .form-item-box.clearfix
        .item.clearfix
          p.text-right#toolbar
            a(href="")
              +icon("share-alt","导出")
          table