extends /common

append style
  +style('work')

append content
  .container-fluid
    .con-container
      .tab-nav.text-right
        button.btn.btn-primary.J-add-save 查询
        button.btn.btn-default 新增
        button.btn.btn-default 删除
      .pact-form.clearfix
        .row.col-md-12.slider-container 
          +form-horizontal()(class="row" id="add-contact-form")
            .row
              +form-horizontal-item({label:'报告编号',type:'text',cw:7})(class="col-md-4")
              +form-horizontal-item({label:'报告名称',type:'text',cw:7})(class="col-md-4")
              +form-horizontal-item({label:'申请部门',type:'text',cw:7})(class="col-md-4")
            .row
              +form-horizontal-item({label:'申请人',type:'text',cw:7})(class="col-md-4")
              .form-group.col-md-4
                label.control-label.col-xs-5 认证日期：
                .col-xs-9.col-md-7.date-box
                  input.form-control.pull-left(date="true" style="width:48%;margin-right:4%;") 
                  input.form-control(date="true" style="width:48%;") 
              +form-horizontal-item({label:'报告类型',type:'select',cw:7})(class="col-md-4")
            .row
              .form-group.col-md-6
                label.control-label.col-xs-5(style="width:27%;") 认证状态：
                .col-xs-9.col-md-7
                  label.checkbox-inline 
                    input(type="checkbox")
                    |全部
                  label.checkbox-inline 
                    input(type="checkbox")
                    |已生效
                  label.checkbox-inline 
                    input(type="checkbox")
                    |审批中
                  label.checkbox-inline 
                    input(type="checkbox")
                    |未生效
      p.slider-btn.text-right 
        a.open-close-btn(href="javascript:;") ▼展开  
    .con-container
     .pact-form.list-container
        p.text-right#toolbar
          a(href="")
            +icon("share-alt","导出")
        table#query-list